<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <GridLayout
        android:id="@+id/grid_layout_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="10"
        app:layout_constraintBottom_toTopOf="@+id/btn_send_video_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:src="@drawable/rewind_arrow"
        />

        <Button
            android:id="@+id/btn_filter_rewind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Rembobiner"
        />

    </GridLayout>

    <Button
        android:id="@+id/btn_send_video_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Envoyer directement une vidÃ©o"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid_layout_filters"
    />

</android.support.constraint.ConstraintLayout>